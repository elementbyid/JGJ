<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane 
            fx:id="panePasswd"
            prefHeight="318.0" prefWidth="300.0" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="useInfo.UsePasswordChange"
            >
   <children>
      <VBox layoutX="8.0" layoutY="57.0" spacing="10.0">
         <children>
            <Label layoutX="8.0" layoutY="55.0" prefHeight="16.0" prefWidth="285.0" text="  안전한 비밀번호로 내정보를 보호하세요.&#10;">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="8.0" layoutY="87.0" prefHeight="16.0" prefWidth="285.0" text="ㆍ다른 아이디/사이트에서 사용한 적 없는 비밀번호" textFill="#ff6020">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="124.0" prefHeight="16.0" prefWidth="285.0" text="ㆍ이전에 사용한 적 없는 비밀번호가 안전합니다." textFill="#ff6020">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Label layoutX="10.0" layoutY="9.0" prefHeight="36.0" prefWidth="209.0" text="비밀번호 변경">
         <font>
            <Font name="Arial Bold" size="30.0" />
         </font>
      </Label>
      <PasswordField  fx:id="pwfNewPW" text="" layoutX="25.0" layoutY="152.0" prefHeight="30.0" prefWidth="250.0" promptText="새 비밀번호">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="pwfNewPWChk" text="" layoutX="25.0" layoutY="180.0" prefHeight="30.0" prefWidth="250.0" promptText="새 비밀번호 확인">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
      </PasswordField>
      <Button 
                fx:id="btnOK"
                layoutX="25.0" layoutY="225.0" 
                mnemonicParsing="false" 
                prefHeight="30.0" prefWidth="250.0" 
                text="확인"
                onAction="#handleBtnOkAction"
                >
         <font>
            <Font name="Arial" size="17.0" />
         </font>
      </Button>
      <Button
        fx:id="btnClose" 
        layoutX="26.0" layoutY="269.0" 
        mnemonicParsing="false" 
        prefHeight="30.0" prefWidth="250.0" 
        text="취소"
        onAction="#handleBtnCloseAction"
        >
         <font>
            <Font name="Arial" size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
